<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="promo.catalog.grid">
            <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="promo.catalog.grid.massaction" as="grid.massaction">
                <arguments>
                    <argument name="massaction_id_field" xsi:type="string">rule_id</argument>
                    <argument name="form_field_name" xsi:type="string">rule_id</argument>
                </arguments>
                <action method="addItem">
                    <argument name="itemId" xsi:type="string">delete</argument>
                    <argument name="item" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Delete</item>
                        <item name="url" xsi:type="string">catalog_rule/promo_catalog/massDelete</item>
                        <item name="confirm" xsi:type="string" translate="true">Are you sure?</item>
                    </argument>
                </action>
                <action method="addItem">
                    <argument name="itemId" xsi:type="string">enable</argument>
                    <argument name="item" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Active</item>
                        <item name="url" xsi:type="string">catalog_rule/promo_catalog/massEnable</item>
                    </argument>
                </action>
                <action method="addItem">
                    <argument name="itemId" xsi:type="string">disable</argument>
                    <argument name="item" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Inactive</item>
                        <item name="url" xsi:type="string">catalog_rule/promo_catalog/massDisable</item>
                    </argument>
                </action>
                <action method="addItem">
                    <argument name="itemId" xsi:type="string">duplicate</argument>
                    <argument name="item" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Duplicate</item>
                        <item name="url" xsi:type="string">catalog_rule/promo_catalog/massDuplicate</item>
                    </argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
